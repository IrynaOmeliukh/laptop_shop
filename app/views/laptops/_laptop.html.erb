<div id="<%= dom_id laptop %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Company:</strong>
    <%= laptop.company %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Model:</strong>
    <%= laptop.model %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Year:</strong>
    <%= laptop.year %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= laptop.price %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this laptop", laptop, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this laptop', edit_laptop_path(laptop), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
    <% if laptop.like %>
      <%= button_to 'Remove from Favorites', remove_from_favorites_path(laptop), method: :delete,  class:"bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      <% else %>
      <%= button_to 'Add to Favorites', add_to_favorites_path(laptop), class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  <% end %>
</div>
