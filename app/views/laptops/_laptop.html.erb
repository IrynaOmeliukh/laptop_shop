<div id="<%= dom_id laptop %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Company:</strong>
    <%= laptop.company %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Model:</strong>
    <%= laptop.model %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Year:</strong>
    <%= laptop.year %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= laptop.price %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this laptop", laptop, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this laptop', edit_laptop_path(laptop), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <% if @favorites.include?(laptop)%>
      <%= button_to 'Remove from favorites', remove_from_favorites_path(laptop), method: :delete,  class:"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-2 mt-3 border border-blue-500 hover:border-transparent rounded" %>
    <% else %>
      <%= button_to 'Add to favorites', add_to_favorites_path(laptop.id), class:"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-2 mt-3 border border-blue-500 hover:border-transparent rounded" %>
    <% end %>
    <hr class="mt-6">
  <% end %>
</div>
